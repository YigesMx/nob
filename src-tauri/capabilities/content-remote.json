{
  "$schema": "../gen/schemas/remote-schema.json",
  "identifier": "content-remote",
  "description": "Allow remote content window to access limited Tauri APIs",
  "windows": ["content"],
  "remote": {
    "urls": ["https://*", "http://*"]
  },
  "platforms": ["macOS", "windows", "linux"],
  "permissions": [
    "core:default",
    "opener:default",
    "notification:default"
  ]
}
